#!/bin/bash
set -euo pipefail


# ==================================================================
# APPS
# ==================================================================

apps=(
  "Todoist"
  "iTerm"
  "Slack"
  "Calendar"
  "Mail"
  "Spotify"
)

for app in "${apps[@]}"; do
  open -a "$app"
done


# ==================================================================
# WEBSITES
# ==================================================================

websites=(
  "https://trello.com/b/HCedzXo1/development"
  "http://localhost:3000"
)

open -a "Google Chrome" --args --profile-directory="Profile 1"
for website in "${websites[@]}"; do
  open "$website"
done


# ==================================================================
# TERMINAL WORKFLOW
# ==================================================================

cd ~
DEFAULT_DIRECTORY="repos/edgar"

tmux new-window -c "$DEFAULT_DIRECTORY"
tmux rename-window "background"
tmux send-keys -t 0 C-z "foreman start -f Procfile.dev" Enter

tmux new-window -c "$DEFAULT_DIRECTORY"
tmux rename-window "main"
tmux send-keys -t 0 C-z "vim -c 'E'" Enter
